# Safety Service Configuration
NODE_ENV=development
PORT=3005

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=drone_fleet_db
DB_USER=fleet_user
DB_PASSWORD=your_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=2
REDIS_PASSWORD=

# WebSocket Configuration
WS_PORT=8085
WS_HEARTBEAT_INTERVAL=30000

# Safety Thresholds
BATTERY_CRITICAL_THRESHOLD=15
BATTERY_WARNING_THRESHOLD=25
BATTERY_LOW_THRESHOLD=35
EMERGENCY_LANDING_THRESHOLD=10

# Emergency Response Configuration
ENABLE_EMERGENCY_LANDING=true
EMERGENCY_LANDING_TIMEOUT=180000
NOTIFICATION_COOLDOWN=60000

# External Services
TELEMETRY_SERVICE_URL=http://localhost:3001
MISSION_SERVICE_URL=http://localhost:3002
COORDINATION_SERVICE_URL=http://localhost:3003

# Monitoring Configuration
SAFETY_CHECK_INTERVAL=5000
BATTERY_TREND_ANALYSIS_INTERVAL=30000
ALERT_PROCESSING_INTERVAL=2000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/safety-service.log